<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.PublicProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/businessImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DealTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textSize="50sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/DealTitleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editDealTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Edit"
                        android:textColor="@android:color/holo_purple" />

                    <Button
                        android:id="@+id/editDealCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:visibility="gone"></Button>

                    <Button
                        android:id="@+id/editDealUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:visibility="gone"></Button>


                </LinearLayout>

                <TextView
                    android:id="@+id/BusinsesTypeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="20sp"
                    android:textStyle="bold" />

              <!--  <EditText
                    android:drawableLeft="@drawable/price_icon"
                    android:id="@+id/BusinsesType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/editBusinesstype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Edit"
                    android:textColor="@android:color/holo_purple" />

                <Button
                    android:id="@+id/editPriceCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:visibility="gone"></Button>

                <Button
                    android:id="@+id/editPriceUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:visibility="gone"></Button>
-->

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/DiscountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:drawableLeft="@drawable/percentage_icon"
            android:id="@+id/DiscountEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/editDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Edit"
            android:textColor="@android:color/holo_purple" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">



            <Button
                android:id="@+id/dealDiscountCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/dealDiscountUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:visibility="gone"></Button>


        </LinearLayout>



        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remaning"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/timeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/editTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Edit"
            android:textColor="@android:color/holo_purple" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">



            <Button
                android:id="@+id/dealtimeCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/dealtimeUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:visibility="gone"></Button>


        </LinearLayout>


        <TextView
            android:id="@+id/dealLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deal_limit"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/dealLimitEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editButtondealLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Edit"
                android:textColor="@android:color/holo_purple" />

            <Button
                android:id="@+id/dealLimitCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/dealLimitUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:visibility="gone"></Button>


        </LinearLayout>

        <TextView
            android:id="@+id/dealDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:text="@string/lrim"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/dealDescEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editDealDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Edit"
                android:textColor="@android:color/holo_purple" />

            <Button
                android:id="@+id/editDealDescCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/editDealDescUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:visibility="gone"></Button>


        </LinearLayout>


        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="0"
            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

        <EditText
            android:id="@+id/address"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Repost Deal" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
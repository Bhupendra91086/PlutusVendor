<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/dateandtime_icon"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Start Date \n &amp; Time" />


            <CheckBox
                android:id="@+id/now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="NOW" />
        </RelativeLayout>




        <EditText
            android:inputType="number"
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/hourglass"
            android:drawablePadding="5dp"
            android:hint="Duration (hrs)" />

        <CheckBox
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:text="Repeat" />




        <LinearLayout
            android:id="@+id/dateCotainer"

            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">


            <ToggleButton
                android:id="@+id/monday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="false"
                android:textOff="M"
                android:textOn="M" />

            <ToggleButton
                android:id="@+id/tusday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="false"
                android:textOff="T"
                android:textOn="T" />

            <ToggleButton
                android:id="@+id/wedesday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="false"
                android:textOff="W"
                android:textOn="W" />

            <ToggleButton
                android:id="@+id/thurseday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="false"
                android:textOff="T"
                android:textOn="T" />

            <ToggleButton
                android:id="@+id/friday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="false"
                android:textOff="F"
                android:textOn="F" />

            <ToggleButton
                android:id="@+id/saturday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="true"
                android:textOff="S"
                android:textOn="S" />

            <ToggleButton
                android:id="@+id/sunday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:checked="true"
                android:textOff="S"
                android:textOn="S" />


        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/endDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dateandtime_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="End On" />

        <TextView
            android:visibility="gone"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dateandtime_icon"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Time" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cancel" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Save" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
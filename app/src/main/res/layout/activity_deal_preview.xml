<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@android:color/white"
            app:cardBackgroundColor="@color/background_color"
            app:cardCornerRadius="@dimen/fab_margin"
            app:cardElevation="@dimen/profile_eval">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.app.plutusvendorapp.util.CustomTextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    app:AppFont="HelveticaNeue Medium.ttf" />

                <RelativeLayout
                    android:id="@+id/relative_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/ten_dp">

                    <RelativeLayout
                        android:id="@+id/image_container"
                        android:layout_width="350dp"
                        android:layout_height="350dp"

                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/itemImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/ic_launcher"></ImageView>

                        <ImageView
                            android:id="@+id/popular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/popular"
                            android:visibility="gone"></ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_container"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="company_name"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />


                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/cuisin_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="cuisin_type"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/distance_away"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cuisin_type"
                                android:text="0.2mi Away"
                                android:textColor="#3C3C43"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/deals_claimed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 deals claimed !"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/deals_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 deals left !"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/original_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="company_name"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/lowered_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cuisin_type"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                            <com.app.plutusvendorapp.util.CustomTextView
                                android:id="@+id/percentage_off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="percentage_off"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:AppFont="HelveticaNeue Medium.ttf" />

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/belowcontainer"
            android:layout_width="match_parent"
            android:layout_height="90dip"
            android:layout_below="@+id/card_view"

            android:padding="@dimen/fab_margin">


            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/dummy"
                android:background="@android:color/transparent"
                android:src="@drawable/delete_deal" />

            <ImageButton
                android:id="@+id/reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/cancel"
                android:background="@android:color/transparent"
                android:paddingBottom="15dp"
                android:src="@drawable/replay" />

            <ImageButton
                android:id="@+id/purchase"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/dummy"
                android:background="@android:color/transparent"
                android:src="@drawable/star_deal" />

            <ImageButton
                android:id="@+id/buydeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/purchase"
                android:background="@android:color/transparent"
                android:paddingBottom="15dp"
                android:src="@drawable/buy_deal" />

            <ImageView
                android:id="@+id/dummy"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/buttoncontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/belowcontainer"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <Button
                android:id="@+id/cancelDeal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveLater"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Save for \n Later"
                android:visibility="gone" />

            <Button
                android:id="@+id/postDeal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Post \n Deal" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>